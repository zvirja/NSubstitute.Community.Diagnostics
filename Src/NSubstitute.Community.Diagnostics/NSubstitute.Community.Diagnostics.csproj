<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0; net45</TargetFrameworks>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>
    
    <PropertyGroup>
        <Description>Diagnostics library for NSubstitute to troubleshoot day-to-day issues.</Description>
        <Authors>Alex Povar</Authors>
        <PackageId>NSubstitute.Community.Diagnostics</PackageId>
        <PackageTags>nsubstitute;diagnostics;troubleshoot</PackageTags>
        <PackageProjectUrl>https://github.com/zvirja/NSubstitute.Community.Diagnostics</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NSubstitute" Version="[4.1.0,5.0.0)" />
    </ItemGroup>
</Project>
